{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "nitro.config.ts"
  ]
}
